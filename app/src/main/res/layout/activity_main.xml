<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:textAlignment="center"
            android:textSize="20pt"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonSeven"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="7" />

                    <Button
                        android:id="@+id/buttonEight"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="8" />

                    <Button
                        android:id="@+id/buttonNine"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="9" />

                    <Button
                        android:id="@+id/buttonPlus"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonOperationPlus"
                        android:text="+" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonFour"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="4" />

                    <Button
                        android:id="@+id/buttonFive"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="5" />

                    <Button
                        android:id="@+id/buttonSix"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="6" />

                    <Button
                        android:id="@+id/buttonMinus"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonOperationMinus"
                        android:text="-" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonOne"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="1" />

                    <Button
                        android:id="@+id/buttonTwo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="2" />

                    <Button
                        android:id="@+id/buttonThree"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="3" />

                    <Button
                        android:id="@+id/buttonMultiply"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonOperationMultiply"
                        android:text="*" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonClear"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonOperationClear"
                        android:text="C" />

                    <Button
                        android:id="@+id/buttonZero"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonEvents"
                        android:text="0" />

                    <Button
                        android:id="@+id/buttonEqual"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonOperationEqual"
                        android:text="=" />

                    <Button
                        android:id="@+id/buttonDiv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="buttonOperationDiv"
                        android:text="/" />


                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>